{
    "containerDefinitions": [
        {
            "command": [
                "/bin/sh -c \"uvicorn --host 0.0.0.0 --port 8080 fideslog.api.main:app\""
            ],
            "entryPoint": [
                "sh",
                "-c"
            ],
            "essential": true,
            "environment": [
                {
                    "name": "FIDESLOG__DATABASE_ACCOUNT",
                    "value": "<snowflake_account>"
                },
                {
                    "name": "FIDESLOG__DATABASE_USER",
                    "value": "<snowflake_db_user>"
                },
                {
                    "name": "FIDESLOG__DATABASE_PASSWORD",
                    "value": "<snowflake_db_password>"
                }
            ],
            "image": "httpd:2.4",
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/fargate-task-definition",
                    "awslogs-region": "us-east-1a",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "name": "fideslog",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ]
        }
    ],
    "cpu": "256",
    "executionRoleArn": "<role_arn>",
    "family": "<cluster_name>",
    "memory": "512",
    "networkMode": "awsvpc",
    "runtimePlatform": {
        "operatingSystemFamily": "LINUX"
    },
    "requiresCompatibilities": [
        "FARGATE"
    ]
}
